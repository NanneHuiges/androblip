<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/General.Layout.Scroll"
    android:orientation="vertical" >

    <com.huiges.AndroBlip.views.FormattedTextView
        android:id="@+id/entry_comment_item_content"
        style="@style/General.Layout.EntryItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/General.Layout.Scroll"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/entry_comment_item_user"
            style="@style/General.Layout.Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/entry_comment_iconcontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/entry_comment_replycontainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="right"
            />
    </LinearLayout>

    <View
        style="@style/General.Layout.SeparatorEntry"
        android:layout_marginBottom="3sp" />

</LinearLayout>